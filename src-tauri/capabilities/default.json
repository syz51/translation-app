{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "fs:default",
    "fs:allow-exists",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-read-dir",
    "fs:allow-create",
    "fs:allow-mkdir",
    "fs:scope-appdata",
    "fs:scope-appdata-recursive",
    "store:default",
    "store:allow-get",
    "store:allow-set",
    "store:allow-save"
  ]
}
